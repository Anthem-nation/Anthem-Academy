# ============================================================
# Anthem Academy — Environment Variables Template
# Copy this file to .env.local and fill in actual values.
# NEVER commit .env.local or any file with real secrets.
# ============================================================

# ------------------------------------------------------------
# Supabase (required)
# ------------------------------------------------------------
# Find in: supabase.com → Project → Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ------------------------------------------------------------
# App
# ------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ------------------------------------------------------------
# Google OAuth (optional — needed for Google SSO)
# Find in: console.cloud.google.com → APIs & Services → Credentials
# ------------------------------------------------------------
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ------------------------------------------------------------
# Email (Resend — needed for auth emails, notifications)
# Find in: resend.com → API Keys
# ------------------------------------------------------------
RESEND_API_KEY=re_your-resend-api-key

# ------------------------------------------------------------
# Error Monitoring (Sentry — optional but recommended in prod)
# Find in: sentry.io → Project → Settings → Client Keys
# ------------------------------------------------------------
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@o0.ingest.sentry.io/0
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=anthem-academy

# ------------------------------------------------------------
# Analytics (PostHog — optional)
# Find in: posthog.com → Project → Settings
# ------------------------------------------------------------
NEXT_PUBLIC_POSTHOG_KEY=phc_your-posthog-project-api-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
